                <!--android:text="Select a photo"-->
                <!--android:layout_width="fill_parent"-->
               <!--android:layout_height="wrap_content"-->
                <!--android:onClick="pickPhoto" />-->
             <!--<Button android:text="Upload photo"-->
            <!--android:layout_width="fill_parent"-->
